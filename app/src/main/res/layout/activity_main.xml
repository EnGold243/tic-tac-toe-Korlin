<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerTv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/TurnX"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/gamePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/playerTv">

            <TextView
                android:id="@+id/block"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border"
                android:gravity="center"
                android:maxHeight="250dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block2"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_toEndOf="@id/block"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block3"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_toEndOf="@id/block2"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block4"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block5"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block"
                android:layout_toEndOf="@id/block4"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block6"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block"
                android:layout_toEndOf="@id/block5"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block7"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block4"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block8"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block4"
                android:layout_toEndOf="@id/block7"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/block9"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_below="@id/block4"
                android:layout_toEndOf="@id/block8"
                android:background="@drawable/border"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/gamePlace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/reset"
            android:onClick="reset"
            android:textSize="25sp" />

    </RelativeLayout>

</ScrollView>